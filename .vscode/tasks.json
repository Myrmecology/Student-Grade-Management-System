{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build and run",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",        // Debugging info
          "main.cpp",  // Source file
          "-o",        // Output file
          "studentGrades"  // Output executable name (without .exe for now)
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task by VS Code"
      },
      {
        "label": "run",
        "type": "shell",
        "command": "./studentGrades.exe",  // Ensure I'm using the relative path
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }
  